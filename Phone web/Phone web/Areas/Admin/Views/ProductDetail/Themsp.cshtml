@model Phone_web.Models.ProductDetail

@{
    ViewBag.Title = "Themsp";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2> THÊM SẢN PHẨM MỚI</h2>
@using (Html.BeginForm("Themsp", "ProductDetail", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))

//có 2 hàm thêm thì ghi để bít dô nào get hay post
{
    @Html.AntiForgeryToken()//gửi form lên mới xóa code- có nghĩa dữ liệu nhập đã dc lưu và ko còn sau khi post
    <table class="table">
        <tr>
            <th>Tên sản phẩm</th>
            <td>
                @Html.DropDownListFor(m => m.ProID, new SelectList(ViewBag.Products, "ProID", "ProName"), "-- Chọn sản phẩm --", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <th>Màu sắc</th>
            <td>
                @Html.DropDownListFor(m => m.ColorID, new SelectList(ViewBag.Colors, "ColorID", "ColorName"), "-- Chọn màu --", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <th>Dung lượng</th>
            <td >
                @Html.DropDownListFor(m => m.DungLuongID, new SelectList(ViewBag.DungLuongs, "DungLuongID", "DungLuongName"), "-- Chọn dung lượng --", new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <th>
                Giá
            </th>
            <td>
                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            
        </tr>
        <tr>
            <th>Còn lại</th>
            <td>
                @Html.EditorFor(m => m.RemainQuantity, new { htmlAttributes = new { @class = "form-control" } })
            
        </tr>
        <tr>
            <th>Đã bán</th>
            <td>
                @Html.EditorFor(m => m.SoldQuantity, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            
        </tr>






    </table>


    <div class="text-center mt-4">
        <input type="submit" value="Lưu" class="btn btn-danger fw-bold mx-2" />
        @Html.ActionLink("⬅️ Quay về ", "khohang", null, new { @class = "btn btn-info text-dark fw-bold mx-2" })
    </div>

}
