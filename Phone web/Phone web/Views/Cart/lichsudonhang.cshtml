@model  IEnumerable<Phone_web.Models.Order>


@{
    ViewBag.Title = "lichsudonhang";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}


<h2 class="text-center mt-4">🛒 LỊCH S MUA HÀNG</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        Bạn chưa có đơn hàng nào.
    </div>
}
else
{
    <table class="table table-bordered mt-4">
        <thead class="table-light">
            <tr>
                <th>Mã Đơn</th>
                <th>Sản phẩm</th>

                <th>Phương thức thanh toán </th>

                <th>Trạng thái</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>

            </tr>

        </thead>

        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>
                        <table>
                            <tbody>
                                @foreach (var item in order.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <img src="@Url.Content(item.ProductDetail.Product.ProImage)" width="120" height="120" />
                                        </td>
                                        <td>
                                            @item.ProductDetail.Product.ProName
                                        </td>

                                        <td>@item.ProductDetail.Color.ColorName</td>
                                        <td>@item.ProductDetail.DungLuong.DungLuongName</td>
                                        <td>@item.Quantity</td>
                                        <td>@String.Format("{0:#,##0}₫", item.UnitPrice)</td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </td>




                    <td>@order.PaymentMethod</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.OrderDate</td>

                    <td>@String.Format("{0:#,##0}₫", order.TotalValue)</td>

                </tr>
            }
        </tbody>
    </table>
}

<style>
    /* ===== TIÊU ĐỀ LỊCH SỬ ĐƠN HÀNG KIỂU APPLE ===== */
    h2.text-center.mt-4 {
        font-size: 32px;
        font-weight: 700;
        text-align: center;
        background: #ffffff;
        padding: 20px 0;
        color: #1d1d1f;
        letter-spacing: 0.5px;
        /* Hiệu ứng Apple nhẹ */
        text-shadow: 0 2px 4px rgba(0,0,0,0.08);
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 16px;
    }

   /* Font Apple Style */
