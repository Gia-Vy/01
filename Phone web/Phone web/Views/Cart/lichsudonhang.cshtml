    width: 120px;
    height: 120px;
    object-fit: cover;

    border-radius: 20px;

    /* Apple-style shadow: mềm + sâu + sáng */
    box-shadow:
        0 12px 24px rgba(0,0,0,0.12),
        0 4px 8px rgba(0,0,0,0.08),
        inset 0 0 0 1px rgba(255,255,255,0.4);

    background-color: #fff;
    transition: 0.25s ease;
}

/* Tăng độ nổi khi hover ảnh */
td img:hover {
    transform: translateY(-3px);
    box-shadow:
        0 16px 32px rgba(0,0,0,0.14),
        0 6px 12px rgba(0,0,0,0.1);
}

/* ======== BADGE TRẠNG THÁI ======== */
.badge-status {
    padding: 6px 16px;
    border-radius: 20px;
    color: #fff;
    font-size: 13px;
    font-weight: 500;
}

.badge-complete { background-color: #34c759; }
.badge-pending  { background-color: #ffcc00; }
.badge-cancel   { background-color: #ff3b30; }

