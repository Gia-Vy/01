    width: 100%;
    background: #fafafa;
    border: 1px solid #e4e4e7;
    border-radius: 16px;
    overflow: hidden;
    margin: 0 auto;

    box-shadow: 0 8px 22px rgba(0,0,0,0.04);
}

td table td {
    padding: 12px 10px;
    font-size: 13px;
}

