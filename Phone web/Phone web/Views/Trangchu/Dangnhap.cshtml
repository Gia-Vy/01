
@{
    ViewBag.Title = "LoginNew";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <style>
       

        .login-box {
            background: white;
            padding:25px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 300px;
            text-align: center;
            font-size:20px;
            margin: 40px auto;
            max-width: 1200px;
      
        }

            .login-box input {
                display: block;
                width: 95%;
                margin: 20px 0;
                padding: 12px;
                border-radius: 6px;
                border: 1px solid #ccc;
            }

            .login-box button {
                background: #28a745;
                color: white;
                border: none;
                padding: 10px;
                border-radius: 6px;
                cursor: pointer;
                font-size:18px;
                width:50%;
               
            }
                .login-box button:hover {
                    background-color: limegreen;
                }
             .error {
            color: red;
            margin-top: 15px;
              }

        .banner, marquee {
            display: none;
        }
    </style>
</head>
<body> 
    <div class="login-box">
        <h2>Đăng nhập</h2>
        <input type="text" id="username" placeholder="Tên đăng nhập">
        <input type="password" id="password" placeholder="Mật khẩu">
        <button onclick="login()">Đăng nhập</button>
        <p id="error" class="error"></p>
    </div>

    <script>
        function login() {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();

            // Lấy thông tin từ localStorage (tài khoản đã đăng ký)
            const userData = JSON.parse(localStorage.getItem("user"));

            if (!userData) {
                document.getElementById('error').innerText = "Chưa có tài khoản nào! Vui lòng đăng ký trước.";
                return;
            }

            // So sánh thông tin
            if (username === userData.username && password === userData.password) {
                // Lưu trạng thái đăng nhập
                localStorage.setItem("isLoggedIn", "true");

                // Chuyển sang trang tài khoản
                window.location.href = "/TrangChu/TaiKhoan"; 
            } else {
                document.getElementById('error').innerText = "Sai tài khoản hoặc mật khẩu!";
            }
        }
    </script>
</body>
</html>


